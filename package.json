{
  "name": "@sondr3/minitest",
  "version": "0.1.0",
  "description": "A very small test runner",
  "type": "module",
  "bin": {
    "mt": "dist/bin.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "lib/**/*.ts"
  ],
  "scripts": {
    "dev": "tsc --watch --incremental",
    "build": "tsc",
    "test": "test",
    "format": "prettier --check lib",
    "format:fix": "prettier --write lib",
    "lint": "eslint --cache lib",
    "lint:fix": "eslint --cache --fix lib"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sondr3/minitest.git"
  },
  "keywords": [
    "test"
  ],
  "author": "Sondre Nilsen <sondre@eons.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sondr3/minitest/issues"
  },
  "homepage": "https://github.com/sondr3/minitest#readme",
  "prettier": "@sondr3/prettier",
  "devDependencies": {
    "@sondr3/eslint-config": "0.7.1",
    "@sondr3/prettier": "0.5.1",
    "@sondr3/tsconfig": "0.7.0",
    "@types/node": "17.0.6",
    "@typescript-eslint/eslint-plugin": "5.8.1",
    "@typescript-eslint/parser": "5.8.1",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "prettier": "2.5.1",
    "prettier-eslint": "13.0.0",
    "typescript": "4.5.4"
  }
}
